{
  "name": "chess-node-package",
  "version": "0.0.1",
  "description": "Test, build and deployment resources for chess",
  "author": "Ryan Randall <pythondave@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/pythondave/chess"
  },
  "private": true,
  "_notes": [
    "What is this file? See: https://docs.nodejitsu.com/articles/getting-started/npm/what-is-the-file-package-json",
    "This file contains:",
    "   - dependencies: node packages used in this project",
    "   - scripts - postinstall: script which runs after install (in this case to install bower)",
    "   - messages: messages used in this project",
    "   - paths: location of different types of file (used mainly by gulp)",
    "To install the dependencies, do the following: 1. cmd; 2. cd C:\\inetpub\\wwwroot\\chess; 3. npm install",
    "To update the dependencies do 1 and 2 above and then: 3. npm update"
  ],
  "devDependencies": {
    "del": "*",
    "lodash": "*",
    "ncp": "*",
    "rimraf": "*",
    "traverse": "*",
    "gulp": "*",
    "gulp-add-src": "*",
    "gulp-autoprefixer": "*",
    "gulp-concat": "*",
    "gulp-header": "*",
    "gulp-jshint": "*",
    "gulp-sourcemaps": "*",
    "gulp-strip-debug": "*",
    "gulp-rename": "*",
    "gulp-replace": "*",
    "gulp-uglify": "*",
    "gulp-gzip": "*",
    "gulp-angular-templatecache": "*",
    "gulp-ng-annotate": "*",
    "gulp-minify-css": "*",
    "gulp-sass": "*",
    "gulp-util": "*",
    "gulp-load-plugins": "*",
    "gulp-traceur": "*",
    "gulp-karma": "*",
    "gulp-jasmine": "*",
    "bower": "*",
    "gh-pages": "*"
  },
  "scripts": {
    "postinstall": "bower install"
  },
  "messages": {
    "buildWarning": "DO NOT EDIT THIS FILE DIRECTLY - it is auto-generated. Instead, edit the source files - see gulpfile for details."
  },
  "paths": {
    "_notes": [
      "all paths are relative to gulpfile.js",
      "any path node with a 'base' attribute has base+'/' prepended to all other children"
    ],
    "src": {
      "base": "../src",
      "images": "shared/images",
      "defaultHtml": "default.html",
      "htmlTemplates": [
        "*/**/*.html"
      ],
      "js": [
        "config.js",
        "app.js",
        "**/*.js"
      ],
      "css": [
        "app.scss"
      ]
    },
    "thirdParty": {
      "base": "../bower_components",
      "js": [
        "jquery/dist/jquery.min.js",
        "lodash/lodash.min.js",
        "angular/angular.min.js",
        "angular-resource/angular-resource.min.js",
        "angular-ui-router/release/angular-ui-router.min.js",
        "chessboard.js/js/chessboard.min.js",
        "chess.js/chess.min.js",
        "angular-chessboard/angular-chessboard.js",
        "angular-chess/angular-chess.js"
      ],
      "css": [
        "chessboard.js/css/chessboard.min.css",
        "chessboard.js/css/chessboard.css"
      ]
    },
    "dev": {
      "base": "dev",
      "thirdPartyJs": "third-party.js",
      "thirdPartyCss": "third-party.css",
      "images": "images",
      "defaultHtml": "default.html",
      "srcHtmlTemplates": "src-html-templates.js",
      "srcJs": "src.js",
      "srcCss": "src.css"
    },
    "production": {
      "base": "production",
      "images": "images",
      "defaultHtml": "default.html",
      "js": "app.min.js",
      "css": "app.min.css"
    }
  }
}
